{
  "command": {
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "exact": true,
      "ignoreChanges": [
        "**/*.md",
        "**/*.spec.*",
        "**/*.test.*",
        "**/__fixtures__/**",
        "**/__snapshots__/**",
        "**/__tests__/**"
      ],
      "ignoreScripts": true,
      "message": "chore(release): publish",
      "verbose": true,
      "yes": true
    }
  },
  "npmClient": "yarn",
  "packages": ["packages/*"],
  "useWorkspaces": true,
  "version": "independent"
}
